<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NotesApplication" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
        animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_outline_engineering_24</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/cardview_shadow_end_color</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">5000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.NotesApplication</item>


    </style>
</resources>